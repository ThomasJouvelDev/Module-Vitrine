<% content_for :meta_title, ("#{@article.nom} chez #{INFOS[:societe]}").truncate(65) %>
<% content_for :meta_description, (@article.description).truncate(165) %>
<% content_for :meta_image, @article.couverture %>
<% content_for :meta_image_alt, "Photo de #{@article.nom}" %>
<% content_for :meta_image_width, "1200" %>
<% content_for :meta_image_height, "1200" %>
<div class="circle-gradient">
  <div class="navbar">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-6" >
        <%= link_to((image_tag @article.couverture, alt:"article image", title:"#{@article.nom}", loading:"lazy", :class => "couverture"), @article.couverture, data: { toggle: 'lightbox', gallery: 'example-gallery'}) %>
          <% if @article.vendu %>
          <h3 class="reserve"><%= t(:vendu_text) %></h3>
          <% elsif @article.reserve %>
          <h3 class="reserve"><%= t(:reserve_text) %></h3>
        <% end %>
      </div>
      <div class="col-sm-6">
        <div class="description">
          <h1 class="titre-produit"><%= @article.nom %></h1>
          <%= image_tag "bande_blanche.png", alt: "image divider", title: 'Fabienne Lamberger Ponvianne mini-logo', loading: "lazy", class: "bande-couleur-produit" %>&nbsp;
          <%= simple_format(@article.description) %>
        </div>
        <% if @article.vendu %>
          <span class="vendu"><em><%= t(:article_vendu) %></em></span>
        <% else %>
          <div class="price"><%= @article.prix %></div>
        <% end %>
        <button type="button" id="getinfo" class="btn bouton article" data-name="<%= @article.nom %>" data-cat="<%= @article.category.name %>" data-toggle="modal" data-target="#exampleModal" style="width:100%">
          <i class="fas fa-envelope-open-text"></i>
          <%= t(:contact_article) %>
        </button>
      </div>
    </div>
  </div>
    <div class="container">
      <hr>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"> <%= link_to t(:accueil).capitalize, root_path %> </li>
          <li class="breadcrumb-item"><%= link_to t(:categories).capitalize, categorie_path %></li>
          <% CATEGORIES_ID[@article.category_id].each do |cat| %>
            <li class="breadcrumb-item"><%= link_to t(cat), cat %></li>
          <% end %>
          <li class="breadcrumb-item active" aria-current="page"><%= @article.nom %></li>
        </ol>
      </nav>
      <hr>
    </div>
    <div class="flexdiv">
      <div class="photos-article">
        <div id="lightgallery">
          <a href="https://images.unsplash.com/photo-1601117077477-875c02e7b789?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80">
              <img src="img/thumb1.jpg">
          </a>
          <a href="https://images.unsplash.com/photo-1601117077477-875c02e7b789?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80">
              <img src="img/thumb2.jpg">
          </a>
      </div>

      <!-- COMMENTED IMAGE  -->
      <% if false %>
         <% @article.images.each do |a| %>
            <%= link_to((cl_image_tag a.image, alt:"article image", title:"#{@article.nom}", loading:"lazy", :class => "photo-article"), a.image.url, data: { toggle: 'lightbox', gallery: 'example-gallery'}) %>
        <% end  %> 
      <% end %> 
      <!-- COMMENTED IMAGE  -->

      </div>
    </div>
    <h2 class="text-center"><%= t(:decouvrir) %></h2>
    <div class="cards-tjd-container">
      <% @articles.each do |a| %>
        <%= render 'shared/product-card', product: a %>
      <% end %>
    </div>
  <!-- Modal -->
  <%= @backdrop %>
  <%= @fade %>
    <div class="modal-dialog">
      <div class="modal-content" style="background-image: linear-gradient(-225deg, rgba(95, 95, 95, 0.4) 0%, rgba(0,0,0,0.6) 50%), url(<%= @article.couverture %>);">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLabel"><%= t(:contact_article) %></h4>
          <%= link_to contactsproduit_path(@article) do %>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <% end %>
        </div>
        <div class="modal-body contact-modal">
          <%= render 'shared/form' %>
        </div>
      </div>
    </div>
  </div>
</div>